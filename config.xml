<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "org.die-besserwisser.fuchs"
        version   = "0.1.0">
    <name>fuchs digital</name>

    <description>
        Die oeko-soziale Landkarte Passaus.
    </description>

    <author href="http://www.die-besserwisser.org" email="info@die-besserwisser.org">
        besserwisser eG
    </author>

    <feature name="http://api.phonegap.com/1.0/device" />
    <feature name="http://api.phonegap.com/1.0/geolocation" />

    <preference name="phonegap-version" value="2.3.0" />
    <preference name="orientation"      value="default" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="false" />
    <preference name="splash-screen-duration" value="2000" />

    <access origin="http://die-besserwisser.org" subdomains="true" />

    <icon src="res/icon/android/fuchsicon_57px_invertiert.png" />

    <gap:splash src="res/screen/android/fuchslogo_36px_transparent.png"  gap:platform="android" gap:density="ldpi" />
    <gap:splash src="res/screen/android/fuchslogo_48px_transparent.png"  gap:platform="android" gap:density="mdpi" />
    <gap:splash src="res/screen/android/fuchslogo_72px_transparent.png"  gap:platform="android" gap:density="hdpi" />
    <gap:splash src="res/screen/android/fuchslogo_96px_transparent.png" gap:platform="android" gap:density="xhdpi" />
</widget>